# Application
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://your-frontend-domain.com
API_URL=https://your-api-domain.com

# Database
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/smartwallet_prod

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=pk_live_xxxxx
CLERK_SECRET_KEY=sk_live_xxxxx
CLERK_WEBHOOK_SECRET=whsec_xxxxx

# Inflection AI
INFLECTION_API_URL=https://api.inflection.ai/external/api/inference
INFLECTION_API_KEY=xxxxx
GEMINI_API_KEY=your_gemini_api_key

# Google Vision API (OCR)
GOOGLE_VISION_API_KEY=xxxxx
GOOGLE_CLOUD_PROJECT=smartwallet-prod

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=xxxxx
AWS_SECRET_ACCESS_KEY=xxxxx
AWS_S3_BUCKET_NAME=smartwallet-receipts-prod
AWS_S3_REGION=us-east-1

# Email Service (SendGrid)
SENDGRID_API_KEY=xxxxx
SENDGRID_FROM_EMAIL=noreply@smartwallet.com

# Monitoring
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
SENTRY_ENVIRONMENT=production

# Feature Flags
ENABLE_RECEIPT_SCANNING=true
ENABLE_AI_ASSISTANT=true
ENABLE_GAMIFICATION=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=xxxxx
SESSION_TIMEOUT_MINUTES=30

# Encryption
ENCRYPTION_KEY=xxxxx
